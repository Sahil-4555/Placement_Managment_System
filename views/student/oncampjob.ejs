<%- include ('../partials/header.html'); -%>
		<title>View OnCampus Job Announcement </title>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css">
		<link href="https://cdn.datatables.net/1.10.23/css/dataTables.bootstrap4.min.css">
		<link rel="stylesheet" href="../../css/student.css">
</head>
<body>
    <%- include ('partials/navbar.html'); -%>
    <br/><br/><br/><br/>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <hr class="hl1">
                <div class = "page-header bg-light">
                    <h1 class="text-center">
                        Oncampus Job List
                    </h1>
                 </div>
                 <hr class="hl1"><br/>
            </div>
        </div>
    <div class="row">   
        <div class="col-sm-12 center">
            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    &nbsp;
                    <tr>
                        <th>S.N</th>
                        <th>Company</th>
                        <th>Location</th>
                        <th>Salary</th>
                        <th>Vacancy</th>
                        <th>Jobtype</th>
                        <th>LastDateRegistration</th>
                        <th>More for Apply</th>  
                    </tr> 
                </thead>
               <tbody>
                <%
                if(userData.length!=0){
                var i=1;
                userData.forEach(function(data){
                %>
                &nbsp;
                <tr>
                    <td><%=i; %></td>
                    <td><%=data.cname%></td>
                    <td><%=data.place %></td>
                    <td><%=data.salary %></td>
                    <td><%=data.vacancy %></td>
                    <td><%=data.jobtype %></td>
                    <td><%=data.lastdate %></td>
                    <td><a class="btn btn-outline-secondary btm-sm" role="button" aria-pressed="true" href="/student/applyjobon/<%=data.jid%>">Click!!</a></td>
                </tr>
                <%  i++; }) %>
                <% } else{ %>
                    <tr>
                        <td colspan="7">No Data Found</td>
                    </tr>
                <% } %>
               </tbody>
               <tfoot>
                &nbsp;
                <tr>
                    <th>S.N</th>
                    <th>Company</th>
                    <th>Location</th>
                    <th>Salary</th>
                    <th>Vacancy</th>
                    <th>Jobtype</th>
                    <th>LastDateRegistration</th>
                    <th>More For Apply</th>
                </tr> 
               </tfoot>
            </table>
        </div>
    </div>     
    </div>
    <div class="container-fluid">
        <br><br>
        <footer class="container-fluid text-center bg-light">
            <hr class="last">
            <p>Copyright <i class="fa fa-copyright" aria-hidden="true"></i>&nbsp;<script>document.write(new Date().getFullYear())</script>&nbsp;By Placement Management System</p>
        </footer>
        </div>
</body>

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
		<script src="https://cdn.datatables.net/1.10.23/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#example').DataTable();
        } );
    </script>
    <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js" integrity="sha256-xNjb53/rY+WmG+4L6tTl9m6PpqknWZvRt0rO1SRnJzw=" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</html>