<%- include ('../partials/header.html'); -%>
		<title>SignUp Company</title>
		<link rel="stylesheet" href="../../css/company.css">
</head>
<body>
      <br><br><br>
      <div class="container">
          <% if (locals.message) { %>
            <div class="row">
              <div class="col-3"></div>
              <div class="col-6">
              <div class="alert alert-success" role="alert">Your account has been created successfully, Now you can <a href="/company/login">Login</a></div>
              </div>
              <div class="col-3"></div>
            </div>
          <% } %>  
      <br><br>   
      <div class="row">
      <div class="col-4"></div>
      <div class="col-4 form-group bg-light border rounded border-primary">
            <form action="/company/signup" method="POST" data-toggle="validator">
                    <h2 class="text-center">Company SignUp</h2><hr class="hl1"><br/>
                    <div class="form-group">
                      <label>HRName</label>
                      <input type="text" name="user_name" data-error="You must have a hrname." id="inputName" class="form-control" placeholder="HRName" value="<%= (locals.old_data) ? old_data.user_name : ''; %>" required>
                      <!-- Error -->
                      <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group">
                      <label>Email</label>
                      <input type="email" name="user_email"  id="inputEmail" class="form-control" placeholder="xyz@gmail.com" value="<%= (locals.old_data) ? old_data.user_email : ''; %>" required>
                       <!-- Error -->
                       <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group">
                      <label >Password</label>
                      <input type="password" name="user_pass" data-minlength="6" id="inputPassword"
                      data-error="Have atleast 6 characters" class="form-control" placeholder="Password" required>
                      <!-- Error -->
                      <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group">
                      <label >CompanyName</label>
                      <input type="text" name="companyname" data-error="You must have a Companyname." id="inputName" class="form-control" placeholder="Companyname" required>
                      <!-- Error -->
                      <div class="help-block with-errors"></div>
                    </div>
                    <% if (locals.register_error) { 
                      register_error.forEach(function(error_msg){ %>
                      <div class="alert alert-danger" role="alert"><%= error_msg %></div>
                    <% });
                    } %>
                    <button type="submit" class="btn btn-outline-primary">Sign Up</button>
                    <br/>
                    <br/>
              </form>
      </div>
      <div class="col-4"></div>
      </div>
      </div>
<%- include ('../partials/footer.html'); -%>
