<%- include ('../partials/header.html'); -%>
		<title>Login TPO</title>
		<link rel="stylesheet" href="../../css/tpo.css">
</head>
<body >
      <br><br><br><br><br>
      <div class="container">
      <div class="row">
        
        <div class="col-4"></div>
        <div class="col-4 max-auto form-group bg-light border rounded border-primary">
            <form action="/tpo/login" method="POST" data-toggle="validator">
              <h2 class="text-center">TPO Login</h2><hr class="hl1"><br/>
                    <div class="form-group">
                      <label>Email</label>
                      <input type="email" name="user_email" id="inputEmail" class="form-control" placeholder="xyz@gmail.com" required>
                      <!-- Error -->
                      <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group">
                      <label for="_pass">Password</label>
                      <input type="password" name="user_pass" id="inputPassword"
                      data-error="You must have enter password." class="form-control" placeholder="Password" required>
                       <!-- Error -->
                       <div class="help-block with-errors"></div>
                    </div>
                    <% if (locals.login_errors) { 
                      login_errors.forEach(function(error_msg){ %>
                      <div class="alert alert-danger" role="alert"><%= error_msg %></div>
                    <% });
                    } %>
                    <div class="form-group">
                    <button type="submit" class="btn btn-outline-primary">Login</button>
                    </div>
                    <hr>
                    <div class="form-group">
                      <span> Don't have an account! </span><a href="signup">Sign Up here</a>
                    </div>
            </form>
        </div>
        <div class="col-4"></div>
      </div>
      </div>
     
<%- include ('../partials/footer.html'); -%>
      