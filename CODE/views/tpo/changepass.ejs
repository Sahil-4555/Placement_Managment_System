<%- include ('../partials/header.html'); -%>
		<title>ChangePasswordTpo</title>
		<link rel="stylesheet" href="../../css/tpo.css">
</head>
<body>
    <%- include ('partials/navbar.html'); -%>
    <br><br><br><br><br>
    <div class="container">
    <div class ="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 max-auto form-group bg-light border rounded border-primary">
                <h1 class="text-center">Change Password</h1>
                <hr class="hl1"><hr class="hl1">   
                    <form class="" method="post" action="/tpo/changepass" data-toggle="validator">
                                <div class="form-group row">
                                    <input type="text" name="tpassword" value="<%=res.tpassword%>" hidden>
                                    <input type="text" name="tid" value="<%=res.tid%>" hidden>
                                    <label class="col-sm-4 col-form-label">Old Password</label>
                                    <div class="col-sm-8">
                                        <input type="password" data-minlength="6" id="inputPassword"
                                        data-error="Have atleast 6 characters" class="form-control" name="oldPassword" required>
                                        <!-- Error -->
                                    <div class="help-block with-errors"></div>
                                    </div>
                                    
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label">New Password</label>
                                    <div class="col-sm-8">
                                        <input type="password" data-minlength="6" id="inputPassword"
                                        data-error="Have atleast 6 characters" class="form-control" name="newPassword" required>
                                        <!-- Error -->
                                    <div class="help-block with-errors"></div>
                                    </div>
                                    
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label">Confirm Password</label>
                                    <div class="col-sm-8">
                                        <input type="password" data-minlength="6" id="inputPassword"
                                        data-error="Have atleast 6 characters" class="form-control" name="confirmPassword" required>
                                        <!-- Error -->
                                    <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <hr><hr>
                                <div>
                                    <button type="submit" class="btn btn-outline-info">Change Password</button>
                                    <br>
                                </div>
                                <br>
                                <div class="">
                                    <% for(var i=0; i< errs.length; i++){ %>
                                        <div class="alert alert-danger" role="alert"><%= errs[i].message; %>
                                        <br>
                                    <% } %>
                                    <% for(var i=0; i< success.length; i++){ %>
                                        <div class="alert alert-success" role="alert"><%= success[i].message; %></div>
                                        <br>
                                    <% } %>
                                </div>
                               
                    </form>
                </div>
                <div class="col-md-3"></div>
        </div>
    </div>           
<%- include ('../partials/footer.html'); -%>
