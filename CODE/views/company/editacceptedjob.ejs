<%- include ('../partials/header.html'); -%>
		<title>Edit Accepted Job</title>
		<link rel="stylesheet" href="../../css/company.css">
</head>
<body>
    <%- include ('partials/navbar.html'); -%>
    <br/><br/><br/><br/>
    <div class="container">
    <div class ="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 max-auto form-group bg-light border rounded border-primary">
            <h1 class="text-center">Edit Accepted Job</h1>
            <hr class="hl1"><hr class="hl1">
            <form method="post" action="" data-toggle="validator">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label" >Location</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" data-error="You must have a Place." id="inputName" name="place" value="<%=res.place%>" required>
                        <!-- Error -->
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <hr>	
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label" >Salary</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" min="0" max="1000000" data-error="You must have a Salary." id="inputName" name="salary" value="<%=res.salary%>" required>
                        <!-- Error -->
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <hr>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label" >Bond_years</label>
                    <div class="col-sm-4">
                        <input type="number" class="form-control" min="0" max="20" name="bondyears" id="inputNumber" value="<%=res.bondyears%>" required>
                        <!-- Error -->
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <hr>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Service Agreement Des.</label>
                    <div class="col-sm-9">
                        <textarea type="text" class="form-control" rows="3" name="servagree"><%=res.servagree%></textarea>
                    </div>
                </div>
                <hr>
                <div class="form-group row">
                    <label for="inputState" class="col-sm-3 col-form-label">Jobtype</label>
                    <div class="col-sm-5">
                    <select id="inputState" class="form-control" name="jobtype" value="<%=res.jobtype%>" required>
                      <option selected>Job</option>
                      <option>Only Internship</option>
                      <option>Internship + Job</option>
                    </select>
                    </div>
                </div>
                <hr>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Job Description</label>
                    <div class="col-sm-9">
                        <textarea type="text" class="form-control" rows="3" name="jobinfo" ><%=res.jobinfo%></textarea>
                    </div>
                </div>
                <hr>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Vacancy</label>
                    <div class="col-sm-4">
                        <input type="number" class="form-control" min="1" max="10000" id="inputNumber" name="vacancy"  value="<%=res.vacancy%>" required>
                        <!-- Error -->
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <hr>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">(Min criteria)</label>
                    <label class="col-sm-3 col-form-label">AvgCPI(>=)</label>
                    <div class="col-sm-2">
                        <input type="float" class="form-control" id="inputNumber" name="minavgcp" value="<%=res.minavgcp%>">   
                    </div>
                    <label class="col-sm-3 col-form-label">backlogs(<=)</label>
                    <div class="col-sm-2">
                        <input type="number" class="form-control" min="0" max="8" id="inputNumber" name="minblog" value="<%=res.minblog%>">
                        
                    </div>
                </div>
                <hr>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Last Date of Registration</label>
                    <div class="col-sm-5">
                        <input type="date" class="form-control" name="lastdate" id="inputDate" value="<%=res.lastdate%>" required>
                        <!-- Error -->
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <hr>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Date of Exam</label>
                    <div class="col-sm-5">
                        <input type="date" class="form-control" name="dateexam"  value="<%=res.dateexam%>">
                    </div>
                </div>
                <hr>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Date of Interview</label>
                    <div class="col-sm-5">
                        <input type="date" class="form-control" name="dateinterview"  value="<%=res.dateinterview%>">
                    </div>
                </div>
                <hr>
                <div class="form-group row">
                    <label for="inputState" class="col-sm-3 col-form-label" >SelectCollege</label>
                    <div class="col-sm-5" readonly >
                        <input type="text" class="form-control" name="college"  value="<%=res.college%>" readonly>
                    </div>
                </div>
                <hr>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label" >Departments</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="department" value="<%=res.department%>" readonly>
                    </div>
                </div>
                <hr><hr>     
                <div>
                    <br/>
                    <pre>
                            <button type="submit" class="btn btn-outline-info">Edit Job</button>
                    </pre>
                </div>
        </form>
        </div>
        <div class="col-md-3"></div>
    </div>
    </div>
<%- include ('../partials/footer.html'); -%>